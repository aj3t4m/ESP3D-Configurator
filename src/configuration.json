                    "options": [
                        {
                            "label": "0",
                            "value": "USE_SERIAL_0",
                            "help":"Also used by bootloader output, so consider to make it quiet" 
                        },
                        {
                            "label": "1",
                            "value": "USE_SERIAL_1"
                            
                        },
                        {
                            "label": "2",
                            "value": "USE_SERIAL_2"
                        }
                    ]
                },
                {
